<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.myplayerr.controller.MainController">

    <!-- Menu horizontal en haut -->
    <top>
        <MenuBar>
            <Menu text="Preferences">
                <MenuItem text="Preferences" onAction="#showSettings" />
                <MenuItem text="Chang path music" onAction="#changePathMusic" />
            </Menu>
            <Menu text="Help">
                <MenuItem text="About" onAction="#showAbout" />
            </Menu>
        </MenuBar>
    </top>

    <!-- Menu vertical Ã  gauche -->
    <left>
        <VBox spacing="10" style="-fx-background-color: #2c3e50; -fx-padding: 10;">
            <Button text="Playlists" minWidth="100" onAction="#showPlaylist" style="-fx-font-size: 14;" />
            <Button text="Albums" minWidth="100" onAction="#showAlbums" style="-fx-font-size: 14;" />
            <Button text="Chansons" minWidth="100" onAction="#showChansons" style="-fx-font-size: 14;" />
            <Button text="Artistes" minWidth="100" onAction="#showArtistes" style="-fx-font-size: 14;" />
        </VBox>
    </left>

    <!-- Zone centrale pour afficher le contenu -->
    <center>
        <BorderPane fx:id="mainPane" />
    </center>
</BorderPane>
